{% import _self as lyssal_messages_flash_bootstrap_3 %}
{% macro display_flash(messageCode, classCode = null) %}
    {%- if classCode is null -%}
        {%- set classCode = messageCode -%}
    {%- endif -%}
    {%- for message in app.session.flashbag.get(messageCode) -%}
        <div class="alert alert-dismissable alert-{{ classCode }}">
            {{- message|trans|raw_secure }}
            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
        </div>
    {%- endfor -%}
{% endmacro %}

