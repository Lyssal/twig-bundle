{% import _self as lyssal_messages_flash_foundation_5 %}
{% macro display_flash(messageCode, classCode = null) %}
    {%- if classCode is null -%}
        {%- set classCode = messageCode -%}
    {%- endif -%}
    {%- for message in app.session.flashbag.get(messageCode) -%}
        <div data-alert class="alert-box {{ classCode }}}}">
            {{- message|trans|raw_secure }}
            <a href="#" class="close">&times;</a>
        </div>
    {%- endfor -%}
{% endmacro %}

{{- lyssal_messages_flash_foundation_5.display_flash('success') -}}
{{- lyssal_messages_flash_foundation_5.display_flash('info') -}}
{{- lyssal_messages_flash_foundation_5.display_flash('warning') -}}
{{- lyssal_messages_flash_foundation_5.display_flash('alert') -}}
{{- lyssal_messages_flash_foundation_5.display_flash('error', 'alert') -}}
{{- lyssal_messages_flash_foundation_5.display_flash('secondary') -}}
